<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gitam.ceoconclave.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/havish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Havish"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:visibility="visible" />

    <TextView
        android:id="@+id/havish_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:autoLink="phone"

        android:text="+919945857847"
        android:layout_alignBaseline="@+id/havish"
        android:layout_alignBottom="@+id/havish"
        android:layout_toRightOf="@+id/havish"
        android:layout_toEndOf="@+id/havish" />

    <TextView
        android:id="@+id/ananya"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/havish"
        android:layout_alignLeft="@+id/havish"
        android:layout_below="@+id/havish"
        android:layout_marginTop="16dp"
        android:text="Ananya" />

    <TextView
        android:autoLink="phone"

        android:id="@+id/ananya_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+917996997737"
        android:layout_alignBottom="@+id/ananya"
        android:layout_alignLeft="@+id/havish_number"
        android:layout_alignStart="@+id/havish_number" />



    <TextView
        android:id="@+id/address"
        android:textAlignment="center"
        android:gravity="center"
        android:autoLink="web"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"



         android:layout_marginTop="113dp"
        android:text="@string/address" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gitam"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
